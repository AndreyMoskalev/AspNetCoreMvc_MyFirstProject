@model CinemasOfSity.Models.Movies.UpdatedSectionsPage

<div id="updatedSectionsPage">
    <div id="filter-box">
        @await Html.PartialAsync("MoviesFilter", Model.Filter)
    </div>
    <div id="dataList-box">
        @await Html.PartialAsync("MoviesDataList", Model.DataList)
    </div>

    @{
        List<string> errorsList = ViewBag.Errors;
        if (errorsList != null && errorsList.Count > 0)
        {
            <script type="text/javascript">
                WriteErrors(@Json.Serialize(errorsList));
            </script>
        }
    }
</div>